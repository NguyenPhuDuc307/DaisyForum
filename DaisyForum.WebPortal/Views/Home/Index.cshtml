                                </div>

                                <a class="text-decoration-none text-light-emphasis" style="display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow: hidden;"
                                    href="@url">@item.Title</a>

                                @if (@item.NumberOfVotes == null || item.NumberOfVotes == 0)
                                {
                                    <span style="width: fit-content"
                                        class="m-0 badge d-flex align-items-center p-1 pe-2 text-success bg-success-subtle border border-success-subtle rounded-pill">
                                        <i class="bi bi-hand-thumbs-up-fill me-1"></i> 0
                                    </span>
                                }
                                else
                                {
                                    <span style="width: fit-content"
                                        class="m-0 badge d-flex align-items-center p-1 pe-2 text-success bg-success-subtle border border-success-subtle rounded-pill">
                                        <i class="bi bi-hand-thumbs-up-fill me-1"></i> @item.NumberOfVotes
                                    </span>
                                }
                                @if (item.Labels != null)
                                {
                                    <div class="mt-1" style="display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow: hidden;">
                                        @foreach (var label in item.Labels)
                                        {
                                            <a class="m-0 badge bg-light-subtle border border-light-subtle text-light-emphasis rounded-pill text-decoration-none">
                                                <i class="bi bi-bookmark me-1"></i>@label
                                            </a>
                                        }
                                    </div>
                                }
                            </label>
                        }

                    </div>
    }
        </section>

    </div>
</div>
